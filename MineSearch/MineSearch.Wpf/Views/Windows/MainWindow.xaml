<Window x:Class="MineSearch.Wpf.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:MineSearch.Wpf.Views.UserControls"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button 
            Command="{Binding GameViewModel.NewGameCommand}"
            Width="100"
            Height="30">
            New Game
        </Button>
        <userControls:MineSearchGameView 
            Grid.Row="1"
            DataContext="{Binding GameViewModel}" />
    </Grid>
</Window>
