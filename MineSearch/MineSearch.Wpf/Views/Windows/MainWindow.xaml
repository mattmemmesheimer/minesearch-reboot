<Window x:Class="MineSearch.Wpf.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:MineSearch.Wpf.Views.UserControls"
        xmlns:converters="clr-namespace:MineSearch.Wpf.Converters"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:GameStatusToIconConverter x:Key="GameStatusToIconConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBox
                Height="30"
                Width="50"
                Text="{Binding GameViewModel.Game.RemainingFlagCount}"
                IsReadOnly="True" />
            <Button
                Grid.Column="1"
                Command="{Binding GameViewModel.NewGameCommand}"
                Width="30"
                Height="30">
                <Grid Width="20" Height="20">
                    <ContentControl
                        Template="{Binding GameViewModel.GameStatus, Converter={StaticResource GameStatusToIconConverter}}" />
                </Grid>
            </Button>
            <TextBox
                Grid.Column="2"
                Height="30"
                Width="50"
                Text="{Binding GameViewModel.GameDurationSeconds}"
                IsReadOnly="True" />
        </Grid>
        <userControls:MineSearchGameView 
            Grid.Row="1"
            DataContext="{Binding GameViewModel}" />
    </Grid>
</Window>
