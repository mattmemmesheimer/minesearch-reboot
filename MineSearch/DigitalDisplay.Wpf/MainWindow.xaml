<Window x:Class="DigitalDisplay.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DigitalDisplay.Wpf.Views"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Width="30" Click="ButtonBase_OnClick"></Button>
        <views:DigitalDisplayView Grid.Row="1" Background="Black" x:Name="DigitalDisplay" />
    </Grid>
</Window>
